<%=
workbook = Spreadsheet::Workbook.new
worksheet = workbook.create_worksheet

worksheet.row(0).replace( [ "Task Name", "Due Priority", "Due", "Completed" ] )

@tasks.each_with_index do |task, index|
  row_number = index + 1

  worksheet.row( row_number ).replace( [ task.name, task.priority, task.due, task.completed ] )
end

file = StringIO.new

workbook.write( file )

file.string.html_safe
%>
