<% if ! @tasks.empty? %>
  <% @tasks.each do |task| %>
  
      <% 
        if task.completed 
          checked = "checked"
        else 
          checked = ""
        end
      %>
      
      <li class="list-group-item d-flex justify-content-between align-items-center task-list">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" name="task-check" <%= checked %> class="custom-control-input" id="<%= task.id %>">
          <label class="custom-control-label pointer" for="<%= task.id %>"><%= task.name %></label>
          <span class="badge badge-<%= task_priority('badge', task.priority) %> mx-2">
            <%= task_priority('text', task.priority) %>
          </span>
        </div>

        <div>
          <span class="text-muted mx-3"><%= task.due.strftime('%d %b %Y') %></span>
          <small>
            <%= link_to 'edit', edit_path(task.id), class: "text-muted", title: "Edit this task" %> 
            <span class="text-muted">â€¢</span>          
            <%= link_to 'delete', destroy_path(task.id), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: "text-muted", title: "Delete this task" %>
          </small>
        </div>
      </li>                                
  <% end %>
<% else %>
  <li class="list-group-item d-flex justify-content-between align-items-center text-muted">
      You do not have a task yet.
  </li>
<% end %>
