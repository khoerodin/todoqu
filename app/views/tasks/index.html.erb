<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">

            <div id="due">
                <%= render 'due_task' %>
            </div>            
            
            <div class="card border-1">
                <div class="card-header border-0 bg-white">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Sorted by</span>
                                </div>
                                <select class="custom-select" id="sortedBy">
                                    <option value="last_created" selected>Last created</option>
                                    <option value="due">Due date</option>
                                    <option value="priority">Priority</option>
                                    <option value="name">Task name</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <%= link_to 'Download as .xlsx', export_path + '.xls', class: "btn btn-success" %>
                        </div>
                        <div class="col-md-2">
                            <%= link_to "Add New", new_path, :class => "btn btn-primary btn-block" %>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <ul class="list-group" id="all">
                        <%= render 'all_task' %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
